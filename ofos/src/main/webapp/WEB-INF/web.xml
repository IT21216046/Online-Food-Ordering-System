<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
         	<servlet-name>login</servlet-name>
         	<servlet-class>com.customer.LoginServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>login</servlet-name>
         	<url-pattern>/log</url-pattern>
         </servlet-mapping>
         
         
         <servlet>
         	<servlet-name>customerInsert</servlet-name>
         	<servlet-class>com.customer.CustomerServlet</servlet-class> 
         </servlet>
         <servlet-mapping>
         	<servlet-name>customerInsert</servlet-name>
         	<url-pattern>/insert</url-pattern>
         </servlet-mapping>
         
          <servlet>
         	<servlet-name>updateCustomer</servlet-name>
         	<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>updateCustomer</servlet-name>
         	<url-pattern>/update</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>deleteCustomer</servlet-name>
         	<servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>deleteCustomer</servlet-name>
         	<url-pattern>/delete</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>adminLogin</servlet-name>
         	<servlet-class>com.customer.AdminLoginServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>adminLogin</servlet-name>
         	<url-pattern>/admin</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>items</servlet-name>
         	<servlet-class>com.customer.ItemServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>items</servlet-name>
         	<url-pattern>/item</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>edit</servlet-name>
         	<servlet-class>com.customer.EditItemServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>edit</servlet-name>
         	<url-pattern>/edit</url-pattern>
         </servlet-mapping>
         
           <servlet>
         	<servlet-name>deleteitems</servlet-name>
         	<servlet-class>com.customer.DeleteItemServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>deleteitems</servlet-name>
         	<url-pattern>/deleteitem</url-pattern>
         </servlet-mapping>
         
          <servlet>
         	<servlet-name>additem</servlet-name>
         	<servlet-class>com.customer.AddItemServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>additem</servlet-name>
         	<url-pattern>/additem</url-pattern>
         </servlet-mapping>
</web-app>